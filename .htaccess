RewriteEngine On

# Route /work/cv (with or without .pdf) to static/CV-Bilyk-Daniel.pdf
RewriteRule ^work/cv(\.pdf)?$ /static/CV-Bilyk-Daniel.pdf [L]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/work/cv$
RewriteRule ^([^\.]+)$ $1.html [L]

# Redirect .html URLs to clean URLs (for SEO and consistency)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle root domain - serve index.html for bilyk.me/
DirectoryIndex index.html

