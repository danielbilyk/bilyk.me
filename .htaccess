RewriteEngine On

# Route /work/cv to PDF (exact match first)
RewriteRule ^work/cv$ /static/CV-Bilyk-Daniel.pdf [L]

# Route /work/cv.pdf to PDF
RewriteRule ^work/cv\.pdf$ /static/CV-Bilyk-Daniel.pdf [L]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/work/cv$
RewriteCond %{REQUEST_URI} !^/work/cv\.pdf$
RewriteRule ^([^\.]+)$ $1.html [L]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle root domain - serve index.html for bilyk.me/
DirectoryIndex index.html

