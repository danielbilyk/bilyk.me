Options -MultiViews
RewriteEngine On

# Route /work/cv.pdf to PDF and suggest a filename for download
RewriteRule ^work/cv\.pdf$ /static/CV-Bilyk-Daniel.pdf [L,E=CV_DOWNLOAD:true]
Header set Content-Disposition "inline; filename=\"CV-Bilyk-Daniel.pdf\"" env=CV_DOWNLOAD

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/work/cv\.pdf$
RewriteRule ^([^\.]+)$ $1.html [L]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle root domain - serve index.html for bilyk.me/
DirectoryIndex index.html

